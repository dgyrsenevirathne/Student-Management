@model StudentManagement.Models.Grade

@{
    ViewData["Title"] = "Edit Grade";
}

<h2>Edit Grade</h2>
<h4>Student: @ViewBag.StudentName</h4>
<h4>Course: @ViewBag.CourseName</h4>

<form asp-action="Edit">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="Id" />
    <input type="hidden" asp-for="StudentId" />
    <input type="hidden" asp-for="CourseId" />

    <div class="form-group">
        <label asp-for="GradeValue" class="control-label">Grade</label>
        <input asp-for="GradeValue" class="form-control" />
        <span asp-validation-for="GradeValue" class="text-danger"></span>
    </div>

    <div class="form-group mt-3">
        <input type="submit" value="Save" class="btn btn-primary" />
        <a asp-action="StudentGrades" asp-route-id="@Model.StudentId" class="btn btn-secondary">Back to List</a>
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}