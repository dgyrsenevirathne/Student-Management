@model IEnumerable<StudentManagement.Models.Grade>

@{
    ViewData["Title"] = "Student Grades";
}

<h2>Student Grades</h2>

@if (!Model.Any())
{
    <div class="alert alert-info">
        <p>No grades found for this student.</p>
    </div>
}
else
{
    <h3>Grades for @Model.First().StudentName</h3>
}

<a class="btn btn-primary mb-3" asp-action="Create" asp-route-studentId="@ViewBag.StudentId">Add New Grade</a>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Course</th>
            <th>Grade</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var grade in Model)
        {
            <tr>
                <td>@grade.CourseName</td>
                <td>@grade.GradeValue</td>
                <td>
                    <a class="btn btn-warning btn-sm" asp-action="Edit" asp-route-id="@grade.Id" title="Edit">
                        <i class="bi bi-pencil-square"></i>
                    </a>
                    <a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@grade.Id"
                       onclick="return confirm('Are you sure you want to delete this grade?')" title="Delete">
                        <i class="bi bi-trash"></i>
                   </a>
                </td>
            </tr>
        }
    </tbody>
</table>

<div class="mt-3">
    <a asp-controller="Students" asp-action="Index" class="btn btn-secondary">Back to Students</a>
</div>