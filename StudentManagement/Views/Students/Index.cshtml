@model IEnumerable<Student>

@{
    ViewData["Title"] = "Students List";
}

<h2>@ViewData["Title"]</h2>

<a class="btn btn-primary" asp-action="Create">Add New Student</a>

<table class="table table-bordered mt-3">
    <thead>
        <tr>
            <th>Name</th>
            <th>Date of Birth</th>
            <th>Contact</th>
            <th>Email</th>
            <th>Enrollment Number</th>
            <th>Course</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var student in Model)
        {
            <tr>
                <td>@student.Name</td>
                <td>@student.DOB.ToShortDateString()</td>
                <td>@student.Contact</td>
                <td>@student.Email</td>
                <td>@student.EnrollmentNumber</td>
                <td>@student.CourseName</td>
                <td>
                    <a class="btn btn-info btn-sm" asp-action="Details" asp-route-id="@student.Id" title="Details">
                        <i class="bi bi-info-circle"></i>
                    </a>
                    <a class="btn btn-warning btn-sm" asp-action="Edit" asp-route-id="@student.Id" title="Edit">
                        <i class="bi bi-pencil-square"></i>
                    </a>
                    <a class="btn btn-primary btn-sm" asp-controller="Grades" asp-action="StudentGrades" asp-route-id="@student.Id" title="Grades">
                        <i class="bi bi-mortarboard"></i>
                    </a>
                    <a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@student.Id" title="Delete">
                        <i class="bi bi-trash"></i>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
