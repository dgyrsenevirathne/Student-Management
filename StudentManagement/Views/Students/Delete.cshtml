@model Student

@{
    ViewData["Title"] = "Delete Student";
}

<h2>@ViewData["Title"]</h2>

<div class="alert alert-danger">
    <p>Are you sure you want to delete the following student?</p>
</div>

<div class="card">
    <div class="card-body">
        <h5 class="card-title">@Model.Name</h5>
        <p class="card-text">
            <strong>Date of Birth:</strong> @Model.DOB.ToShortDateString() <br />
            <strong>Contact:</strong> @Model.Contact <br />
            <strong>Email:</strong> @Model.Email <br />
            <strong>Enrollment Number:</strong> @Model.EnrollmentNumber <br />
            <strong>Course:</strong> @Model.CourseName
        </p>
        <form asp-action="Delete" method="post">
            <input type="hidden" name="id" value="@Model.Id" />
            <button type="submit" class="btn btn-danger">Delete</button>
            <a class="btn btn-secondary" asp-action="Index">Cancel</a>
        </form>

    </div>
</div>
